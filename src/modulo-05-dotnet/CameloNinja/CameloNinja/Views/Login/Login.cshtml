@model CameloNinja.MVC.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>Página de Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
</head>
<body>
    <div id="main" class="login-main">
        <div id="box">
            @using (Html.BeginForm("Entrar", "Login", FormMethod.Post, new { @class = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div  id="login">
                        <img src="~/Content/Imagens/logoCameloNinja.png" alt="logo">
                    </div>
                    <hr />
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></div>
                            @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control", placeholder = "Email" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></div>
                            @Html.PasswordFor(m => m.Senha, htmlAttributes: new { @class = "form-control", placeholder = "Senha" })
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Login!" class="btn btn-block btn-success" />
                    </div>

                    <div class="form-group">
                        <a href="@Url.Action("CadastroUsuario", "Login")"><input value="Ainda não é cadastrado? Cadastre-se!" class="btn btn-block btn-warning" /></a>
                    </div>

                
                </div>
                
            }
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/custom/validate-override.js"></script>
</body>
</html>
