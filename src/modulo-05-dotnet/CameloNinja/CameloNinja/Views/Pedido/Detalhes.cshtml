@{
    ViewBag.Title = "Detalhes do Pedido";
}

@model CameloNinja.Dominio.Pedido

    <h2>Detalhes do Pedido</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DataPedido)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataPedido)
        </dd>
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.DataEntrega)
        </dt>
        <dd style="position:relative">
            @Html.DisplayFor(model => model.DataEntrega) 
            @Html.Raw(Model.PedidoUrgente ? "<div class='alert alert-danger' style='position: absolute; top: -16px; left: 130px;' role='alert'><span class='glyphicon glyphicon-exclamation-sign' aria-hidden='true' style='margin-right:10px'></span> Este pedido é urgente!</div>" : "")
        </dd>
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.TipoPagamento)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TipoPagamento)
        </dd>
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.NomeCliente)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
<p>
    <button type="submit" class="btn btn-default">
        @Html.ActionLink("Cadastrar Novo Produto", "Cadastro")
    </button>
    <button type="submit" class="btn btn-default">
        @Html.ActionLink("Ver Lista de Pedidos", "Lista")
    </button>
</p>
