@model CameloNinja.Dominio.Pedido
@{
    ViewBag.Title = "Detalhes do Pedido";
}

<h2>Detalhes do Pedido</h2>
<hr />
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.DataPedido)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.DataPedido)
    </dd>
    <hr>
    <dt>
        @Html.DisplayNameFor(model => model.DataEntrega)
    </dt>
    <dd class="dd-urgente">
        @Html.DisplayFor(model => model.DataEntrega)
        @Html.Raw(Model.PedidoUrgente ? "<div class='alert alert-danger' role='alert'><span class='glyphicon glyphicon-exclamation-sign' aria-hidden='true'></span> Este pedido é urgente!</div>" : "")
    </dd>
    <hr>
    <dt>
        @Html.DisplayNameFor(model => model.NomeProduto)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.NomeProduto)
    </dd>
    <hr>
    <dt>
        @Html.DisplayNameFor(model => model.Valor)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Valor)
    </dd>
    <hr>
    <dt>
        @Html.DisplayNameFor(model => model.TipoPagamento)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.TipoPagamento)
    </dd>
    <hr>
    <dt>
        @Html.DisplayNameFor(model => model.NomeCliente)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.NomeCliente)
    </dd>
    <hr>
    <dt>
        @Html.DisplayNameFor(model => model.Cidade)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Cidade)
    </dd>
    <hr>
    <dt>
        @Html.DisplayNameFor(model => model.Estado)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Estado)
    </dd>
</dl>
<p>
    <a href="@Url.Action("Cadastro", "Pedido")">
        <button type="submit" class="btn btn-default"> Adicionar Novo Produto </button>
    </a>
    <a href="@Url.Action("Lista", "Pedido")">
        <button type="submit" class="btn btn-default"> Ver Lista de Pedidos </button>
    </a>
</p>
