@model IEnumerable<CameloNinja.Dominio.Pedido>
@{
    ViewBag.Title = "Lista de Pedidos";
}

<p>
    <a href="@Url.Action("Cadastro", "Pedido")">
        <button type="submit" class="btn btn-default"> Adicionar novo pedido </button>
    </a>
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataPedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataEntrega)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeProduto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="tr-lista">
            <td>
                @Html.DisplayFor(modelItem => item.DataPedido)
            </td>
            <td @Html.Raw(item.PedidoUrgente ? "class='td-urgente'" : "")>
                @Html.DisplayFor(modelItem => item.DataEntrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a href="@Url.Action("Editar", "Pedido")/@item.Id" class="btn btn-info btn-lista" title="Editar Pedido">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Detalhes", "Pedido")/@item.Id" class="btn btn-warning btn-lista" title="Ver Detalhes do Pedido">
                    <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Remover", "Pedido")/@item.Id" class="btn btn-danger btn-lista" title="Remover Pedido">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }
</table>
