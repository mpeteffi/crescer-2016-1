@model CdZ.MVC.Models.Login.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
        @using (Html.BeginForm("Entrar", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken();

            <div>
                @Html.ValidationSummary()
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class="form-control", @type="email" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Senha)
                @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
            </div>
            <input class="btn btn-primary" type="submit" name="entrar" value="Entrar" />
        }
    </div>
</div>
