@model CdZ.MVC.Models.Usuario.UsuarioEditViewModel
@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro</h2>

@using (Html.BeginForm("Manter", "Usuario", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div>
        @Html.ValidationSummary()
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Senha)
        @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmacaoSenha)
        @Html.PasswordFor(m => m.ConfirmacaoSenha, new { @class = "form-control" })
    </div>
    <input type="submit" name="enviar" value="Enviar" />
}

